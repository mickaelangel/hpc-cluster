# Exemple avec S3
terraform {
  backend "s3" {
    bucket         = "hpc-cluster-terraform-state"
    key            = "cluster/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}

