{
  "dashboard": {
    "title": "HPC Cluster - Kafka Dashboard",
    "tags": ["hpc", "kafka", "streaming"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Topics Total",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "kafka_topics_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Messages In",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(kafka_messages_in_total[5m])",
            "refId": "A",
            "legendFormat": "Messages/sec"
          }
        ]
      }
    ]
  }
}
