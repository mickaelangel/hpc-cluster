{
  "dashboard": {
    "title": "HPC Cluster - Security Advanced Dashboard",
    "tags": ["hpc", "security", "advanced"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Security Events Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(security_events_total[5m]))",
            "refId": "A",
            "legendFormat": "Events/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Failed Login Attempts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(fail2ban_ssh_failed_total[5m])",
            "refId": "A",
            "legendFormat": "SSH Failed"
          },
          {
            "expr": "rate(fail2ban_slurm_failed_total[5m])",
            "refId": "B",
            "legendFormat": "Slurm Failed"
          }
        ]
      },
      {
        "id": 3,
        "title": "Banned IPs",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "fail2ban_banned_ips",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "IDS Alerts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(suricata_alerts_total[5m])",
            "refId": "A",
            "legendFormat": "Suricata"
          },
          {
            "expr": "rate(wazuh_alerts_total[5m])",
            "refId": "B",
            "legendFormat": "Wazuh"
          },
          {
            "expr": "rate(ossec_alerts_total[5m])",
            "refId": "C",
            "legendFormat": "OSSEC"
          }
        ]
      },
      {
        "id": 5,
        "title": "Firewall Drops",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(firewall_drops_total[5m])",
            "refId": "A",
            "legendFormat": "Dropped Packets"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Audit Events by Type",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (type) (rate(auditd_events_total[5m]))",
            "refId": "A",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Falco Container Alerts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "rate(falco_alerts_total[5m])",
            "refId": "A",
            "legendFormat": "Falco Alerts"
          }
        ]
      },
      {
        "id": 8,
        "title": "Vulnerability Scan Results",
        "type": "table",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "trivy_vulnerabilities",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 9,
        "title": "Compliance Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "compliance_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Compliance by Standard",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 26},
        "targets": [
          {
            "expr": "compliance_score by (standard)",
            "refId": "A",
            "legendFormat": "{{standard}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Top Security Threats",
        "type": "table",
        "gridPos": {"h": 10, "w": 16, "x": 0, "y": 34},
        "targets": [
          {
            "expr": "topk(10, sum by (threat) (rate(security_threats_total[1h])))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 12,
        "title": "Network Security Events",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "rate(network_security_events_total[5m])",
            "refId": "A",
            "legendFormat": "Network Events"
          }
        ]
      }
    ]
  }
}
