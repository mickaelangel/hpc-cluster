{
  "dashboard": {
    "title": "Slurm Jobs Dashboard",
    "tags": ["hpc", "slurm", "jobs"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Jobs Running",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "slurm_jobs_running",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Jobs Pending",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "slurm_jobs_pending",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Jobs Completed (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(slurm_jobs_completed[24h])",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Jobs Failed (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "increase(slurm_jobs_failed[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Jobs by User",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "slurm_jobs_running by (user)",
            "refId": "A",
            "legendFormat": "{{user}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Jobs by Partition",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "slurm_jobs_running by (partition)",
            "refId": "A",
            "legendFormat": "{{partition}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Job Queue Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "slurm_job_queue_time",
            "refId": "A",
            "legendFormat": "Queue Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 8,
        "title": "CPU Hours by User (24h)",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "sum by (user) (increase(slurm_job_cpu_seconds[24h])) / 3600",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ]
      }
    ]
  }
}
