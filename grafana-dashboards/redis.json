{
  "dashboard": {
    "title": "HPC Cluster - Redis Dashboard",
    "tags": ["hpc", "redis", "cache"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Memory Used",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 2,
        "title": "Connected Clients",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Keys Total",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "redis_keys_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Commands per Second",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "refId": "A",
            "legendFormat": "Commands/sec"
          }
        ]
      }
    ]
  }
}
