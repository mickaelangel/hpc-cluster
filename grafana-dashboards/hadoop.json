{
  "dashboard": {
    "title": "HPC Cluster - Hadoop",
    "tags": ["hpc", "hadoop", "bigdata"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HDFS Capacity Used",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "hadoop_hdfs_capacity_used_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 2,
        "title": "DataNodes Live",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "hadoop_hdfs_datanodes_live",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "MapReduce Jobs",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "hadoop_mapreduce_jobs_running",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "HDFS I/O",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(hadoop_hdfs_bytes_read_total[5m])",
            "refId": "A",
            "legendFormat": "Read"
          },
          {
            "expr": "rate(hadoop_hdfs_bytes_written_total[5m])",
            "refId": "B",
            "legendFormat": "Write"
          }
        ]
      }
    ]
  }
}
