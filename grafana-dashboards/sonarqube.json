{
  "dashboard": {
    "title": "HPC Cluster - SonarQube Dashboard",
    "tags": ["hpc", "sonarqube", "quality"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "60s",
    "panels": [
      {
        "id": 1,
        "title": "Projects Analyzed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sonarqube_projects_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Code Quality Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sonarqube_quality_score",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Issues Found",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sonarqube_issues_total",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
