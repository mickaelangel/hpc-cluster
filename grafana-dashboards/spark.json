{
  "dashboard": {
    "title": "HPC Cluster - Apache Spark",
    "tags": ["hpc", "spark", "bigdata"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Active Applications",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "spark_applications_active",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Jobs Completed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "spark_jobs_completed_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Executor Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(spark_executors_active)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Spark Performance",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(spark_tasks_completed_total[5m])",
            "refId": "A",
            "legendFormat": "Tasks/sec"
          }
        ]
      }
    ]
  }
}
