{
  "dashboard": {
    "title": "HPC Cluster - PostgreSQL Dashboard",
    "tags": ["hpc", "postgresql", "database"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "postgresql_connections_active",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Databases Total",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "postgresql_databases_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Query Performance",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(postgresql_queries_total[5m])",
            "refId": "A",
            "legendFormat": "Queries/sec"
          }
        ]
      }
    ]
  }
}
