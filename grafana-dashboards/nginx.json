{
  "dashboard": {
    "title": "HPC Cluster - Nginx Dashboard",
    "tags": ["hpc", "nginx", "web"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Requests per Second",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total[5m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "nginx_connections_active",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "nginx_http_request_duration_seconds",
            "refId": "A",
            "legendFormat": "Response Time"
          }
        ]
      }
    ]
  }
}
