{
  "dashboard": {
    "title": "HPC Cluster - Backups Dashboard",
    "tags": ["hpc", "backups"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "60s",
    "panels": [
      {
        "id": 1,
        "title": "Last Backup Time",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "backup_last_success_timestamp",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Backup Size",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "backup_size_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 3,
        "title": "Backup Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(backup_success_total / backup_total) * 100",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Backup History",
        "type": "graph",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "backup_duration_seconds",
            "refId": "A",
            "legendFormat": "Duration"
          }
        ]
      }
    ]
  }
}
