{
  "dashboard": {
    "title": "HPC Cluster - Network Advanced Dashboard",
    "tags": ["hpc", "network", "advanced"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Network Bandwidth Total",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(node_network_receive_bytes_total[5m]) + rate(node_network_transmit_bytes_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        }
      },
      {
        "id": 2,
        "title": "Network Latency",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "avg(network_latency_seconds)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "Packet Loss",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(network_packets_dropped_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Network Errors",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(node_network_receive_errs_total[5m]) + rate(node_network_transmit_errs_total[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Bandwidth by Interface",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m]) by (instance, device)",
            "refId": "A",
            "legendFormat": "{{instance}} - {{device}} RX"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m]) by (instance, device)",
            "refId": "B",
            "legendFormat": "{{instance}} - {{device}} TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        }
      },
      {
        "id": 6,
        "title": "Network Topology",
        "type": "graph",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "network_connections by (source, destination)",
            "refId": "A",
            "legendFormat": "{{source}} â†’ {{destination}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Top Talkers",
        "type": "table",
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "topk(20, sum by (instance) (rate(node_network_receive_bytes_total[1h]) + rate(node_network_transmit_bytes_total[1h])))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 8,
        "title": "Network Utilization by VLAN",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "sum by (vlan) (rate(node_network_receive_bytes_total[5m]) + rate(node_network_transmit_bytes_total[5m]))",
            "refId": "A",
            "legendFormat": "VLAN {{vlan}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "MPI Network Performance",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "rate(mpi_network_bytes_total[5m])",
            "refId": "A",
            "legendFormat": "MPI Traffic"
          }
        ]
      }
    ]
  }
}
