{
  "dashboard": {
    "title": "Slurm Partitions Dashboard",
    "tags": ["hpc", "slurm", "partitions"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Nodes by Partition",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "slurm_nodes_total by (partition)",
            "refId": "A",
            "legendFormat": "{{partition}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Nodes Up by Partition",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "slurm_nodes_up by (partition)",
            "refId": "A",
            "legendFormat": "{{partition}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "CPU Utilization by Partition",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "(slurm_cpus_allocated / slurm_cpus_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Memory Utilization by Partition",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(slurm_memory_allocated / slurm_memory_total) * 100",
            "refId": "A",
            "legendFormat": "{{partition}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "Jobs by Partition",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "slurm_jobs_running by (partition)",
            "refId": "A",
            "legendFormat": "{{partition}}"
          }
        ]
      }
    ]
  }
}
